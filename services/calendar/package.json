{
    "name": "kiira-health-calendar-microservice",
    "main": "lib/index.js",

    "engines": {
        "node": "16"
    },

    "scripts": {
        "build": "tsc",
        "start": "npm run shell",
        "shell": "npm run build && firebase functions:shell",
        "serve": "npm run build && firebase emulators:start --only functions",
        
        "deploy": "firebase deploy --only functions",
        "deploy:develop": "npm run set-project:develop && npm run deploy",
        "deploy:production": "npm run set-project:production && npm run deploy",

        "set-project": "firebase use default",
        "set-project:develop": "firebase use develop",
        "set-project:production": "firebase use production"
    },

    "dependencies": {
        "@google-cloud/pubsub": "^2.19.0",
        "firebase-admin": "^10.0.2",
        "firebase-functions": "^3.19.0",
        "glob": "^7.2.0"
    },

    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.22.0",
        "firebase-functions-test": "^0.3.3",
        "typescript": "^3.8.0"
    },

    "private": true
}